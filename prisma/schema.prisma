// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Post {
    id         String    @id @default(uuid())
    title      String
    content    String
    senderId   String
    receiverId String?
    comments   Comment[]
    uniqueView Boolean   @default(false)
    createdAt  DateTime  @default(now())
    updatedAt  DateTime  @updatedAt
    likes      Like[]
    deslikes   Deslike[]
    views      Int       @default(0)
}

model Like {
    id        String   @id @default(uuid())
    senderId  String
    postId    String
    post      Post     @relation(fields: [postId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
model Deslike {
    id        String   @id @default(uuid())
    senderId  String
    postId    String
    post      Post     @relation(fields: [postId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
model Comment {
    id        String   @id @default(uuid())
    senderId  String
    content   String
    postId    String
    post      Post     @relation(fields: [postId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
